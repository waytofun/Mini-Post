<html>
	<head>
		<title>My App</title>
		<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
		<script src="/javascripts/angularApp.js"></script>
		<style> .glyphicon-thumbs-up{cursor:pointer}</style>
		<style> .glyphicon-thumbs-down{cursor:pointer}</style>
	</head>
	<body ng-app="myApp" >
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
			<ui-view></ui-view>
			</div>
		</div>	
	<script type="text/ng-template" id="/home.html">
		<div class="page-header">
			<h1>Mini Post</h1>
		</div>
		<div ng-repeat="post in posts | orderBy:'-upvotes'">
			<span class="glyphicon glyphicon-thumbs-up"
			ng-click="voteUp(post)"></span>
			OR
			<span class="glyphicon glyphicon-thumbs-down"
			ng-click="voteDown(post)"></span>
			"{{post.title}}" Started by {{post.author}} - upvotes:{{post.upvotes}}
			<span><a href="#/posts/{{$index}}">Comments</a></span>
		</div>
		<form ng-submit="addPost()">
		<table>
			<tr><td>Author:</td><td><input type="text" ng-model="author"></input></td></tr>
			<tr><td>Topic:</td><td><input type="text" ng-model="title"></input></td></tr>
			<tr><td colspan="2"><button type="submit"> New Post</button><td></tr>
		</table>
		</form>
	</script>
	<script type="text/ng-template" id="/posts.html">
		<div class="page-header">
			<h3>
			<span>
				"{{post.title}}" Started by {{post.author}}
			</span>
			</h3>
		</div>
		<div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
			<span class="glyphicon glyphicon-thumbs-up"
			ng-click="upVoteComment(comment)"></span>
			OR
			<span class="glyphicon glyphicon-thumbs-down"
			ng-click="downVoteComment(comment)"></span>
			{{comment.upvotes}} - by {{comment.user}}
			<span style="font-size:20px; margin-left:10px;">
			{{comment.body}}
			</span>
		</div>
		<form ng-submit="addComment()"style="margin-top:30px;">
			<h3>Add a new comment</h3>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="user" ng-model="user"></input>
				<textarea rows="4" cols="50" placeholder="comment"ng-model="body"></textarea>
			</div>
			<button type="submit" class="btn btn-primary">Post</button>
		</form>
	</script>
	</body>
</html>